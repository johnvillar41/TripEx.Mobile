<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="10sp"
    app:cardCornerRadius="10dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp">

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Id" />

            <TextView
                android:gravity="left"
                android:padding="3dip"
                android:text="Id Value"
                android:id="@+id/txtId"/>
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Distance" />

            <TextView
                android:gravity="left"
                android:padding="3dip"
                android:text="Distance value"
                android:id="@+id/txtDistanceValue"/>
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Regular Fare" />

            <TextView
                android:gravity="left"
                android:padding="3dip"
                android:text="Regular Fare Value"
                android:id="@+id/txtRegularFareValue"/>
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Discounted Fare" />

            <TextView
                android:gravity="left"
                android:padding="3dip"
                android:text="Discounted fare value"
                android:id="@+id/txtDiscountedFareValue"/>
        </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>
